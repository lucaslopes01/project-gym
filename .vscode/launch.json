{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "FastAPI",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/main.py",
        "args": ["--host", "127.0.0.1", "--port", "8000"],
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        },
        "stopOnEntry": false,
        "cwd": "${workspaceFolder}",
        "debugOptions": [
          "WaitOnAbnormalExit",
          "WaitOnNormalExit",
          "RedirectOutput"
        ]
      }
    ]
  }
  